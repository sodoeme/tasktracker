<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/style.css" />
    <title>Document</title>
  </head>
  <body>
    <div class="content">
      <h1>Task Tracker 2023</h1>

      <form id="task-form" action="/tasks" method="POST">
        <input
          type="text"
          id="task-input"
          name="des"
          placeholder="Enter task"
        />
        <input type="submit" id="task-submit" value="Add Task" />
      </form>

      <h2>Task</h2>

      <%if(tasks.length) {%> <%tasks.forEach(task=>{%>

      <div class="tasks">
        <form class="row">
          <input
          type="text"
          id="task-input"
          name="des"
          value="<%= task.des%>"s
          placeholder="Enter task"
        />
          <input type="submit" class="task-edit" value="Edit Task" />
          <input
            type="submit"
            formmethod="POST"
            class="task-delete"
            formaction = "/tasks/<%= task._id %>?_method=DELETE"
            value="Delete Task"
          />
        </form>
      </div>

      <% });%> <%}%>
    </div>
  </body>
</html>
